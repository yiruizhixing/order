<view class="container">
  <form bindsubmit="bindSave">
    <view class="form-box">
      <view class="row-wrap">
        <view class="label">姓名</view>
        <view class="label-right">
          <input name="name" class="input" type="text" placeholder="姓名" value="{{info.name}}" disabled/>
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">编号</view>
        <view class="label-right">
          <input name="bianhao" class="input" type="text" placeholder="巡考编号" value="{{info.bianhao}}" disabled/>
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">单位</view>
        <view class="label-right">
          <input name="danwei" class="input" type="text" placeholder="工作单位" value="{{info.danwei}}" disabled/>
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">车牌</view>
        <view class="label-right">
          <input name="chepai" class="input" type="text" placeholder="车牌" value="{{info.chepai}}" />
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">身份证号</view>
        <view class="label-right">
          <input name="sfzh" class="input" maxlength="18" type="text" placeholder="身份证号" value="{{info.sfzh}}" />
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">手机号码</view>
        <view class="label-right">
          <input name="mobile" class="input" maxlength="11" type="number" placeholder="11位手机号码" value="{{info.mobile}}" />
        </view>
      </view>

      <view class="row-wrap">
        <view class="label">银行卡号</view>
        <view class="label-right">
          <input name="bankcard" class="input" maxlength="11" type="number" placeholder="银行卡号" value="{{info.bankcard}}" />
        </view>
      </view>
      <view class="row-wrap">
        <view class="label">开户银行</view>
        <view class="label-right">
          <input name="bankaddr" class="input" type="text" placeholder="开户银行" value="{{info.bankaddr}}" />
        </view>
      </view>
    </view>
    <button type="warn" class="save-btn" formType="submit">保存</button>
    <!-- <button type="default" class="save-btn" bindtap="deleteAddress">删除该地址</button> -->
    <button type="default" class="cancel-btn" bindtap="bindCancel">取消</button>
  </form>
</view>